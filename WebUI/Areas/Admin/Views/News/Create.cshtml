@model CreateNewsViewModel
@{
    ViewData["Title"] = "Create";
}
@section style{

    <link href="~/Admin/assets/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.css" rel="stylesheet" type="text/css" />
    <style>
        .grid-body {
            background: #1b1e2482;
        }

        .form-actions {
            background: none;
        }
    </style>
}
<div class="row">
    <div class="col-md-10 offset-2">
        <div class="grid simple">
            <div class="grid-body no-border">
                <form method="post" enctype="multipart/form-data" autocomplete="off" class="validate dropzone">
                    <div class="form-group">
                        <label class="form-label">Title</label>
                        <input class="form-control" asp-for="Title" id="form1Amount" required="" aria-required="true">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Choose tags</label>
                        <select id="multi" asp-for="Tagsx" asp-items='new SelectList(Model.Tags, "Id", "Name")' style="width:100%" multiple>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <textarea id="text-editor" asp-for="Description" placeholder="Enter text ..." class="form-control" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="fallback">
                            <input asp-for="File" type="file" accept="image/*" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="fallback">
                            <label class="form-label">Instagram post</label>
                            <input class="form-control" asp-for="InstaPost" id="form1Amount">
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="pull-right">
                            <button class="btn btn-success btn-cons" type="submit"><i class="icon-ok"></i> Save</button>
                            <button class="btn btn-white btn-cons" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section script{

    <script src="~/Admin/assets/plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.js" type="text/javascript"></script>
    <script src="~/Admin/assets/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.js" type="text/javascript"></script>
    <script src="~/Admin/assets/plugins/bootstrap-select2/select2.min.js" type="text/javascript"></script>
    <script src="@@path/vendor/dropzone/dist/min/dropzone.min.js"></script>
    <script>
        $("#multi").select2();
        $('#text-editor').wysihtml5();
        var myDropzone = new Dropzone("div#myId", { url: "/file/post" });
    </script>

}