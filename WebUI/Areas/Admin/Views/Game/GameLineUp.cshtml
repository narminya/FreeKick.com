@model GameLineUpViewModel
@{
    ViewData["Title"] = "GameLineUp";
}
@section style{
    <link href="~/Admin/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/plugins/boostrap-clockpicker/bootstrap-clockpicker.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Admin/assets/plugins/bootstrap-timepicker/css/bootstrap-timepicker.css" rel="stylesheet" type="text/css" />
}

<div class="col-md-12">
    <div class="row">
        <div class="col-md-4">
            <div class="grid simple form-grid">
                <input type="hidden" name="gameId" value="@ViewBag.Id" />
                <div class="grid-body no-border">
                    <form>

                        <div class="form-group">
                            <label class="form-label">
                                Add player
                            </label>
                            <div class=" right">
                                <i class=""></i>
                                <select class="form-control select2" name="hplayer" asp-items='new SelectList(Model.HomePlayers, "Id", "Surname")' id="cardType" data-init-plugin="select2" required>
                                </select>
                                <span class="text-danger" id="current"> </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                Add position
                            </label>
                            <div class=" right">
                                <i class=""></i>
                                <select class="form-control select2" name="hposition" asp-items='new SelectList(Model.Positions, "Id", "Name")' id="cardType" data-init-plugin="select2" required>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="start" class="form-label">
                                From start
                            </label>
                            <input type="checkbox" name="hstart" />
                        </div>
                        <button class="btn btn-success btn-cons" type="button" id="addHomePlayer"><i class="icon-ok"></i> Save</button>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="grid simple form-grid">

                <div class="grid-body no-border">
                    <table class="table table-striped table-flip-scroll cf">
                        <thead class="cf">
                            <tr>
                                <th>Surname</th>
                                <th>Positions</th>
                            </tr>
                        </thead>
                        <tbody class="homeList">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-4">
            <div class="grid simple form-grid">

                <div class="grid-body no-border">
                    <form>
                        <input type="hidden" name="gameId" value="" />
                        <div class="form-group">
                            <label class="form-label">
                                Add player
                            </label>
                            <div class=" right">
                                <i class=""></i>
                                <select class="form-control select2" name="aplayer" asp-items='new SelectList(Model.AwayPlayers, "Id", "Surname")' id="cardType" data-init-plugin="select2" required>
                                </select>
                                <span class="text-danger" id="awayP"> </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                Add position
                            </label>
                            <div class=" right">
                                <i class=""></i>
                                <select class="form-control select2" name="aposition" asp-items='new SelectList(Model.Positions, "Id", "Name")' id="cardType" data-init-plugin="select2" required>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="start" class="form-label">
                                From start
                            </label>
                            <input type="checkbox" name="astart" />
                        </div>
                        <button class="btn btn-success btn-cons" type="button" id="addAwayPlayer"><i class="icon-ok"></i> Save</button>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="grid simple form-grid">

                <div class="grid-body no-border">
                    <table class="table table-striped table-flip-scroll cf">
                        <thead class="cf">
                            <tr>
                                <th>Surname</th>
                                <th>Positions</th>
                            </tr>
                        </thead>
                        <tbody class="awayList">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="~/Admin/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="~/Admin/assets/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="~/Admin/assets/plugins/boostrap-clockpicker/bootstrap-clockpicker.min.js" type="text/javascript"></script>
    <script src="~/Admin/assets/js/form_validations.js" type="text/javascript"></script>
    <script>
        $('#addHomePlayer').on('click', function () {
            $('#current').empty();
            var playerid = $("[name='hplayer']").val();
            var posId = $("[name='hposition']").val();
            var gameId = $("[name='gameId']").val();
            var start = $("[name='hstart']").val();

            $.ajax({
                type: "Get",
                url: "/Admin/Game/PlayerPosition/",
                data: { TeamPlayerId: playerid, GamePositionId: posId, GameId: gameId, Start: start },
                success: function (res) {
                    if (res.message == null) {
                        $('.homeList').append(res);
                    }
                    else {
                        console.log(res)
                        $('#current').append(res.message)

                    }

                }
            })
        });

        $('#addAwayPlayer').on('click', function () {
            $('#awayP').empty();
            var playerid = $("[name='aplayer']").val();
            var posId = $("[name='aposition']").val();
            var gameId = $("[name='gameId']").val();
            var start = $("[name='astart']").val();

            $.ajax({
                type: "Get",
                url: "/Admin/Game/PlayerPosition/",
                data: { TeamPlayerId: playerid, GamePositionId: posId, GameId: gameId, Start: start },
                success: function (res) {
                    if (res.message == null) {
                        $('.awayList').append(res);
                    }
                    else {
                        console.log(res)
                        $('#awayP').append(res.message)

                    }

                }
            })
        });
    </script>

}
