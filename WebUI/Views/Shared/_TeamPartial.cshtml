@model TeamDto

<div class=" actions-y" style="background-image: url('@Url.Content($"~/assets/img/titleImages/{Model.TitleImage}")');">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex align-items-center">
                <img src="/assets/img/teams/@Model.Logo" style="width:66px; margin-right:20px" alt="">
                <h2 class="text-light ml-3">@Model.Name</h2>
            </div>
        </div>
    </div>
</div>
<div class="buttons p-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12"><a asp-action="Index" asp-route-id="@Model.Id" class="team-btn @(ViewContext.RouteData.Values["Action"].ToString()=="Index"?"active":"")">News</a></div>
            <div class="col-lg-4 col-sm-12"><a asp-action="TeamInfo" asp-route-id="@Model.Id" class="team-btn @(ViewContext.RouteData.Values["Action"].ToString()=="TeamInfo"?"active":"")">Squad</a></div>
            <div class="col-lg-4 col-sm-12"><a asp-action="TeamMatches" asp-route-id="@Model.Id" class="team-btn @(ViewContext.RouteData.Values["Action"].ToString()=="TeamMatches"?"active":"")">Matches</a></div>

        </div>
    </div>
</div>
