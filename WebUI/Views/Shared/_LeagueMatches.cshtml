@model MatchViewModel
<div class="match-t">

    @if (Model.Date < DateTime.Now)
    {<div class="match-status">
            FT
        </div>
    }
    else
    { <div class="match-status">
            @Model.Date.ToShortTimeString();
        </div>}

    <div class="match-data">
        <img src="~/assets/img/teams/@Model.Home.TeamImage" />
        <p class="team-home"><a asp-controller="Team" asp-action="Index" asp-route-id="@Model.Home.TeamId"> @Model.Home.TeamName</a></p>
        <div class="goals d-flex ">
            <div class="match-result">
                <div class="goals-home">
                    <a asp-controller="Match" asp-action="Index" asp-route-id="@Model.MatchId">@Model.Home.TeamScore</a>
                </div>
                <span>-</span>
                <div class="goals-away">
                    <a asp-controller="Match" asp-action="Index" asp-route-id="@Model.MatchId"> @Model.Away.TeamScore</a>
                </div>

            </div>

        </div>
        <p class="team-away"><a asp-controller="Team" asp-action="Index" asp-route-id="@Model.Away.TeamId">@Model.Away.TeamName</a></p>
        <img src="~/assets/img/teams/@Model.Away.TeamImage" />
    </div>
</div>